  </head>

  <body class="hold-transition skin-blue sidebar-mini">
    <div id="headerDiv"></div>
    <div id="sideDiv"></div>
    <div class="content-wrapper" style="height: auto; min-height: 100%">
      <section class="content-header">
        <h1>Shop</h1>
        <!-- <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Member</li>
            </ol> -->
      </section>
      <section class="content">
        <div class="row">
          <div class="col-md-12">
            <div class="box box-primary">
              <div class="box-header with-border">
                <a
                  href="/admin/addshop"
                  id="more"
                  type="button"
                  class="btn btn-add btn-primary"
                  style="float: left"
                  ><i class="fa fa-plus"></i>&nbsp;Add Shop</a
                >
              </div>
            </div>
            <div class="box box-primary">
              <!-- <div class="box-header with-border">
                            <a href="/admin/addteams.html" id="more" type="button" class="btn btn-group btn-primary"
                                style="float: left;"><i class="fa fa-plus"></i>&nbsp;Add Member</a>
                        </div> -->
            </div>
            <div class="box box-primary">
              <div class="box-body table-responsive no-padding">
                <table class="table table-responsive table-bordered">
                  <thead>
                    <th style="width: 15%">Shop Name</th>

                    <th style="width: 10%">Action</th>
                  </thead>
                  <tbody>
                    <% shop.forEach(function(user){ %>
                    <tr role="row" class="odd">
                      <td style="width: 12%"><%= user.name %></td>

                      <td style="width: 10%">
                        <form action="/admin/editshop" method="get">
                          <input
                            type="hidden"
                            name="id"
                            value="<%= user._id %>"
                          />
                          <button class="btn btn-edit btn-sm" type="submit">
                            <i class="fa fa-edit"></i>&nbsp;Edit
                          </button>
                        </form>
                      </td>
                    </tr>
                    <% })%>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
    <div id="footerDiv"></div>
  </body>
</html>
