<!DOCTYPE HTML>
<html >
<head>
    <title</title>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script>
        $(function () {
            $("#headerDiv").load("head.html");
            $("#sideDiv").load("sidebar.html");
            $("#footerDiv").load("foot.html");
        });
    </script>
</head>
<body class="hold-transition skin-blue sidebar-mini">
		<div id="headerDiv"></div>
		<div id="sideDiv"></div>
<div class="content-wrapper" style="height: auto; min-height: 100%;">
    <section class="content-header">
		<h1>Edit Team</h1>
	
	</section>
	<section class="content">
		<div class="row">
			<div class="col-md-12">
				<div class="box box-primary">
					<!-- <div class="box-header with-border">
						<h3 class="box-title">Edit Info</h3>
					</div> -->
					<form action="/edit_team" enctype="multipart/form-data" method="post"> 
				
						<div class="box-body">
								<% team.forEach(function(user){ %>
						
							<div class="form-group">
								<label>Name &nbsp;</label>
								<input type="hidden" name="id" value="<%= user._id %>" />
								<input type="text" name="name" id="name" class="form-control"value="<%= user.name %>" />
							</div>
						</br>

							<div class="form-group">
									<label>Post &nbsp;&nbsp;&nbsp;&nbsp;</label>
							
									<input type="text" name="post" id="post" class="form-control"   value="<%= user.post %>"  />
								</div>
							</br>
							<div class="form-group">
                                <label>Image&nbsp;&nbsp;<span style="color:red;">*</span></label>
                                <input id="file" type="file" name="file"  />
                          </div>
								
							<% })%>
						</div>
					</br>
						<div class="box-footer">
							<button type="submit" class="btn btn-edit btn-sm"><i class="fa fa-check-circle"></i>Update Member Information</button>
						</div>
					</br>
					</form>
				</div>
			</div>
		</div>
	</section>
</div>
<div id="footerDiv"></div>

</body>
</html>