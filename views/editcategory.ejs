<!DOCTYPE HTML>
<html>

<head>
	<title</title> <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js">
		</script>
		<script>
			$(function () {
				$("#headerDiv").load("head.html");
				$("#sideDiv").load("sidebar.html");
				$("#footerDiv").load("foot.html");
			});
		</script>
</head>

<body class="hold-transition skin-blue sidebar-mini">
	<div id="headerDiv"></div>
	<div id="sideDiv"></div>
	<div class="content-wrapper" style="height: auto; min-height: 100%;">
		<section class="content-header">
			<h1>Edit Category</h1>

		</section>
		<section class="content">
			<div class="row">
				<div class="col-md-12">
					<div class="box box-primary">
						<!-- <div class="box-header with-border">
							<h3 class="box-title">Edit Info</h3>
						</div> -->
						<form action="/edit_category" method="post">

							<div class="box-body">
								<% category.forEach(function(user){ %>

								<div class="form-group">
									<label>Name &nbsp;<span style="color:red;">*<&nbsp;/span></label>
									<input type="hidden" name="id" value="<%= user._id %>" />
									<input type="text" name="name" id="name" class="form-control"
										value="<%= user.name %>"  />
								</div>
							</br>

							

							</br>
								<% })%>
							</div>
							<div class="box-footer">
								<button type="submit" class="btn btn-edit btn-sm"><i class="fa fa-check-circle"></i>Update
									Category</button>
							</div>
						</br>
						</form>
					</div>
				</div>
			</div>
		</section>
	</div>
	<div id="footerDiv"></div>

</body>

</html>