<!DOCTYPE html>
<html>

<head>
    <title>Coupon Site</title>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script>
        $(function () {
            $("#headerDiv").load("head.html");
            $("#sideDiv").load("sidebar.html");
            $("#footerDiv").load("foot.html");
        });
    </script>
</head>

<body class="hold-transition skin-blue sidebar-mini">
    <div id="headerDiv"></div>
    <div id="sideDiv"></div>
    <div class="content-wrapper" style="height: auto; min-height: 100%;">
        <section class="content-header">
            <h1>Customer List</h1>
            <!-- <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Customer Care</li>
            </ol> -->
        </section>
        <section class="content">
            <div class="row">
                <div class="col-md-12">

                    <div class="box box-primary">

                        <div class="box-body table-responsive no-padding">

                            <table class="table table-responsive table-bordered">
                                <thead>
                                    <th style=" width: 11%;">Name</th>
                                    <th style="width: 15%;">Email</th>
                                    <th style="width: 21%;">Password</th>
                                    <th style="width: 18%;">Favourite</th>


                                    <th style="width: 15%;">Action</th>
                                </thead>
                                <tbody>


                                    <% customers.forEach(function(user){ %>
                                    <tr role="row" class="odd">
                                        <td style="width: 11%;"><%= user.name %></td>
                                        <td style="width: 21%;"><%= user.email %></td>
                                        <td style="width: 15%;"><%= user.password %></td>
                                        <td style="width: 15%;"><%= user.favourite %></td>
                                        <td style="width: 20%;">

                                                   <form  action="/deletecustomer" method="post"> 
                                                    <input type="hidden" name="id" value="<%= user._id %>" />
                                                       <button class="btn btn-delete btn-sm" type="submit"><i  class="fa fa-edit"></i>&nbsp;Delete
                                                       </button>
                                                   </form>
                                        </td>
                                    </tr>
                                    <% })%>
                                </tbody>
                            </table>
                        </div>
                      
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div id="footerDiv"></div>
    <!-- <script type="text/javascript">
        $("#contentActive").addClass("active");
        $("#contentActive").parent().parent().addClass("treeview active");
        $("#contentActive").parent().addClass("in");
    </script> -->
</body>

</html>