<!DOCTYPE HTML>
<html>

<head>
	<title</title> <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js">
		</script>
		<script>
			$(function () {
				$("#headerDiv").load("head.html");
				$("#sideDiv").load("sidebar.html");
				$("#footerDiv").load("foot.html");
			});
		</script>
</head>

<body class="hold-transition skin-blue sidebar-mini">
	<div id="headerDiv"></div>
	<div id="sideDiv"></div>
	<div class="content-wrapper" style="height: auto; min-height: 100%;">
		<section class="content-header">
			<h1>Edit Customer Care</h1>

		</section>
		<section class="content">
			<div class="row">
				<div class="col-md-12">
					<div class="box box-primary">
						<!-- <div class="box-header with-border">
							<h3 class="box-title">Edit Customer Care Info</h3>
						</div> -->
						<form action="/edit_team" method="post">

							<div class="box-body">
								<% customer.forEach(function(user){ %>

								<div class="form-group">
									<label>Name &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp; </label>
									<input type="hidden" name="id" value="<%= user._id %>" />
									<input type="text" name="name" id="name" class="form-control"
										value= "<%= user.name %>"  />
								</div>

							</br>
								<div class="form-group">
									<label>Address &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </label>

									<input type="text" name="address" id="address" class="form-control"
										value= "<%= user.address %>" />
								</div>
							</br>
								<div class="form-group">
									<label>Mobile &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </label>
							
									<input type="text" name="phone" id="phone" class="form-control"
										value= "<%= user.phone %>" />
								</div>
							</br>

								<div class="form-group">
									<label>Latitude &nbsp; &nbsp;&nbsp;</label>

									<input type="text" name="lat" id="lat" class="form-control" value= "<%= user.lat %>"
										 />
								</div>
							</br>
								<div class="form-group">
									<label>Longitude &nbsp;</label>

									<input type="text" name="long" id="long" class="form-control"
										value= "<%= user.long %>"  />
								</div>
							</br>
								<% })%>
							</div>
							<div class="box-footer">
								<button type="submit" class="btn btn-edit btn-sm"><i class="fa fa-check-circle"></i>Update
									Customer Care</button>
							</div>
						</br>
						</form>
					</div>
				</div>
			</div>
		</section>
	</div>
	<div id="footerDiv"></div>

</body>

</html>