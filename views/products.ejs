<!DOCTYPE html>
<html>

<head>
    <title>Allor Sathi</title>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script>
        $(function () {
            $("#headerDiv").load("head.html");
            $("#sideDiv").load("sidebar.html");
            $("#footerDiv").load("foot.html");
        });
    </script>
</head>

<body class="hold-transition skin-blue sidebar-mini">
    <div id="headerDiv"></div>
    <div id="sideDiv"></div>
    <div class="content-wrapper" style="height: auto; min-height: 100%;">
        <section class="content-header">
            <h1>Product List</h1>
            
        </section>
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">

                        <div class="box-header with-border">
                            <a href="/admin/addproducts.html" id="more" type="button" class="btn btn-add btn-primary"
                                style="float: left;"><i class="fa fa-plus"></i>&nbsp;Add Product</a>
                        </div>
                    </div>
                    <div class="box box-primary">

                        <div class="box-body table-responsive no-padding">

                            <table class="table table-responsive table-bordered">
                                <thead>
                                    <th style="width: 11%;">Model</th>
                                    <th style="width: 15%;">Price</th>
                                    <th style="width: 21%;">Details</th>
                                    <th style="width: 21%;">Image</th>

                                    <th style="width: 15%;">Action</th>
                                </thead>
                                <tbody>


                                    <% product.forEach(function(user){ %>
                                    <tr role="row" class="odd">
                                        <td style="width: 11%;"><%= user.model %></td>
                                        <td style="width: 11%;"><%= user.price %></td>

                                        <td style="width: 21%;"><%= user.detail %></td>
                                        <td style="width: 21%;"> <img src="<%= user.image%>"  height='100' width='100' /></td>
                                   
                                        <td style="width: 13%;">

                                            <form action="/admin/editproduct" method="get">
                                                <input type="hidden" name="id" value="<%= user._id %>" />
                                                <button class="btn btn-edit btn-sm" type="submit"><i
                                                        class="fa fa-edit"></i>&nbsp;Edit
                                                </button>
                                            </form>
                                            <form  action="/deleteproduct" method="post"> 
                                                <input type="hidden" name="id" value="<%= user._id %>" />
                                                   <button class="btn btn-delete btn-sm" type="submit"><i  class="fa fa-edit"></i>&nbsp;Delete
                                                   </button>
                                               </form>


                                        </td>
                                    </tr>
                                    <% })%>
                                </tbody>
                            </table>
                        </div>
                     
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div id="footerDiv"></div>
    <!-- <script type="text/javascript">
        $("#contentActive").addClass("active");
        $("#contentActive").parent().parent().addClass("treeview active");
        $("#contentActive").parent().addClass("in");
    </script> -->
</body>

</html>