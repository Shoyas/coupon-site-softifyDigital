  </head>

  <body class="hold-transition skin-blue sidebar-mini">
    <div id="headerDiv"></div>
    <div id="sideDiv"></div>
    <div class="content-wrapper" style="height: auto; min-height: 100%">
      <section class="content">
        <div class="row">
          <div class="col-md-12">
            <div class="box box-primary">
              <!-- <div class="box-header with-border">
                            <a href="/admin/addteams.html" id="more" type="button" class="btn btn-group btn-primary"
                                style="float: left;"><i class="fa fa-plus"></i>&nbsp;Add Member</a>
                        </div> -->
            </div>
            <div class="box box-primary">
              <div class="box-body table-responsive no-padding">
                <table class="table table-responsive table-bordered">
                  <thead>
                    <th style="width: 15%">Shop Name</th>
                    <th>Coupon Code</th>
                    <th>Coupon Details</th>
                    <th>Exclusive</th>
                    <th style="width: 10%">Action</th>
                  </thead>
                  <tbody>
                    <% shops.forEach(function(shop){ %> <%
                    shop.coupon.forEach(function(coupon){%>
                    <tr role="row" class="odd">
                      <td style="width: 12%"><%= shop.name %></td>
                      <td style="width: 12%"><%= coupon.coupon %></td>
                      <td style="width: 12%"><%= coupon.couponDetails %></td>
                      <td style="width: 12%"><%= coupon.exclusive %></td>
                      <td style="width: 10%">
                        <form action="/admin/edit_coupon" method="get">
                          <input
                            type="hidden"
                            name="id"
                            value="<%= coupon.couponId %>"
                          />
                          <button class="btn btn-edit btn-sm" type="submit">
                            <i class="fa fa-edit"></i>&nbsp;Edit
                          </button>
                        </form>
                      </td>
                    </tr>
                    <% })%> <% })%>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
    <div id="footerDiv"></div>
  </body>
</html>
