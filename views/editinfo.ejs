<!DOCTYPE HTML>
<html>

<head>
	<title</title> <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js">
		</script>
		<script>
			$(function () {
				$("#headerDiv").load("head.html");
				$("#sideDiv").load("sidebar.html");
				$("#footerDiv").load("foot.html");
			});
		</script>
</head>

<body class="hold-transition skin-blue sidebar-mini">
	<div id="headerDiv"></div>
	<div id="sideDiv"></div>
	<div class="content-wrapper" style="height: auto; min-height: 100%;">
		<section class="content-header">
			<h1>Edit Information</h1>

		</section>
		<section class="content">
			<div class="row">
				<div class="col-md-12">
					<div class="box box-primary">
						<!-- <div class="box-header with-border">
							<h3 class="box-title">Edit Info</h3>
						</div> -->
						<form action="/edit_info" method="post">

							<div class="box-body">
								<% info.forEach(function(user){ %>

								<div class="form-group">
									<label>Address &nbsp;<span style="color:red;">*<&nbsp;/span></label>
									<input type="hidden" name="id" value="<%= user._id %>" />
									<input type="text" name="address" id="address" class="form-control"
										value="<%= user.address %>"  />
								</div>
							</br>

								<div class="form-group">
									<label>Email &nbsp;<span style="color:red;">*&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span></label>

									<input type="text" name="email" id="email" class="form-control"
										value="<%= user.email %>"  />
								</div>
							</br>
								<div class="form-group">
									<label>Mobile &nbsp;<span style="color:red;">*&nbsp;&nbsp;&nbsp;&nbsp;</span></label>

									<input type="text" name="mobile" id="mobile" class="form-control"
										value="<%= user.mobile %>"  />
								</div>
							</br>

								<div class="form-group">
									<label>Facebook &nbsp;<span style="color:red;">*</span></label>

									<input type="text" name="fb" id="fb" class="form-control" value="<%= user.fb %>"
										/>
								</div>
							</br>
								<div class="form-group">
									<label>Tweeter &nbsp;<span style="color:red;">*&nbsp;</span></label>

									<input type="text" name="twt" id="twt" class="form-control" value="<%= user.twt %>"
										 />
								</div>

							</br>
								<div class="form-group">
									<label>Linked In &nbsp;<span style="color:red;">*</span></label>

									<input type="text" name="link" id="link" class="form-control"
										value="<%= user.link %>"  />
								</div>
							</br>
								<div class="form-group">
									<label>Youtube &nbsp;<span style="color:red;">*</span></label>

									<input type="text" name="youtube" id="youtube" class="form-control"
										value="<%= user.youtube %>"  />
								</div>
							</br>

								<div class="form-group">
									<label>PlayStore &nbsp;<span style="color:red;">*</span></label>

									<input type="text" name="play" id="play" class="form-control"
										value="<%= user.play %>" />
								</div>
							</br>
								<% })%>
							</div>
							<div class="box-footer">
								<button type="submit" class="btn btn-edit btn-sm"><i class="fa fa-check-circle"></i>Update
									Information</button>
							</div>
						</br>
						</form>
					</div>
				</div>
			</div>
		</section>
	</div>
	<div id="footerDiv"></div>

</body>

</html>