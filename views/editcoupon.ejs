<!DOCTYPE HTML>
<html>

<head>
	<title</title> <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js">
		</script>
		<script>
			$(function () {
				$("#headerDiv").load("head.html");
				$("#sideDiv").load("sidebar.html");
				$("#footerDiv").load("foot.html");
			});
		</script>
</head>

<body class="hold-transition skin-blue sidebar-mini">
	<div id="headerDiv"></div>
	<div id="sideDiv"></div>
	<div class="content-wrapper" style="height: auto; min-height: 100%;">
		<section class="content-header">
			<h1>Edit Shop</h1>

		</section>
		<section class="content">
			<div class="row">
				<div class="col-md-12">
					<div class="box box-primary">
						<!-- <div class="box-header with-border">
							<h3 class="box-title">Edit Info</h3>
						</div> -->
						<form action="/edit_coupon" method="post">

							<div class="box-body">
                                <% shops.forEach(function(user){ %>
                                    <% var couponFilter = user.coupon.filter((coupon) => coupon.couponId == coupon_Id) %>
                                    <% couponFilter.forEach(function (coupon){ %>

								<div class="form-group">
									<label>Name &nbsp;<span style="color:red;">&nbsp;</label>
									<input type="text" name="id" value="<%= coupon.couponId %>" />
									Shop Name: <h5><%= user.name %></h5>
									<input type="text" name="coupon" id="coupon" class="form-control" value="<%= coupon.coupon %>">
									<select name="set_exclusive" id="select_exclusive">
										<option id="yes" value="yes" selected="<%= coupon.exclusive == "yes" %>">yes</option>
										<option id="no" value="no" selected="<%= coupon.exclusive == "no" %>">no</option>
									</select>
									<input type="text" name="couponDetails" id="couponDetails" class="form-control" value="<%= coupon.couponDetails %>">
								</div>
							</br>

							

							</br>
                            <% })%><% })%>
							</div>
							<div class="box-footer">
								<button type="submit" class="btn btn-edit btn-sm"><i class="fa fa-check-circle"></i>Update
									Shop</button>
							</div>
						</br>
						</form>
					</div>
				</div>
			</div>
		</section>
	</div>
    <div id="footerDiv"></div>
    

    <script>
        if(coupon.exclusive == "yes"){
            document.getElementById("yes").selected = true;
        } else{
            document.getElementById("no").selected = false;
        }
    </script>

</body>

</html>