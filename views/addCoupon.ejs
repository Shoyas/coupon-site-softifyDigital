  <body class="hold-transition skin-blue sidebar-mini">
    <div id="headerDiv"></div>
    <div id="sideDiv"></div>
    <div class="content-wrapper" style="height: auto; min-height: 100%">
      <section class="content-header">
        <h1>Add Coupon</h1>

        <!-- <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Member</li>
            </ol> -->
      </section>
      <section class="content">
        <div class="row">
          <div class="col-md-12">
            <div class="box box-primary">
              <div class="box-header with-border">
                <form action="/save_coupon" method="POST">
                  <label for="coupon_code">Coupon</label>
                  <input type="text" name="coupon_code" id="coupon_code" />
                  <br />
                  <br />
                  <label for="coupon_link">Add Coupon link:</label>
                  <input type="url" name="coupon_link" id="coupon_link" />
                  <br />
                  <label for="shop">Select Shop</label>
                  <select name="shop" id="shop">
                    <option selected="selected" disabled>Select Shop</option>
                    <% shops.forEach(function (shop){ %>
                    <option value="<%=shop._id%>"><%= shop.name %></option>
                    <%}) %>
                  </select>
                  <br />
                  <br />
                  <label for="select_categories">Select Categories</label>
                  <select name="categories" id="categories">
                    <option selected="selected" disabled>
                      Select Categories
                    </option>
                    <% categories.forEach(function (category){ %>
                    <option value="<%=category._id%>">
                      <%= category.name %>
                    </option>
                    <%}) %>
                  </select>
                  <br />
                  <br />
                  <label for="select_exclusive">Set As</label>
                  <select name="set_exclusive" id="select_exclusive">
                    <option value="yes">Yes</option>
                    <option value="no">No</option>
                  </select>
                  <br />
                  <label for="description">Description</label>
                  <input type="text" id="description" name="description" />
                  <br />
                  <br />
                  <label for="validity">Validity</label>
                  <input type="date" id="validity" name="validity" />

                  <button type="submit" class="btn btn-add btn-primary">
                    <i class="fa fa-check-circle"></i> Save
                  </button>
                  <br />
                </form>
              </div>
            </div>
            <div class="box box-primary">
              <!-- <div class="box-header with-border">
